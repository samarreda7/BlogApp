@model List<BlogApp.Core.DTOs.ShowPostsDTO>

@{
    ViewData["Title"] = "My Posts";
}

<div class="container mt-4">
    <h2 class="mb-4">Your Posts</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info">You haven't written any posts yet.</div>
    }
    else
    {
        <div class="row">
            @foreach (var post in Model)
            {
                <div class="col-md-6 col-lg-8 mb-4">
                    <div class="card shadow-sm">
                        <div class="card-body">
                            <h5 class="card-title">
                                @post.FirstName @("@")@post.username
                            </h5>
                            @{
                                var created = post.CreatedAt;
                                var updated = post.updateat;
                                var isUpdated = (updated - created).TotalMinutes > 1; // if more than 1 min apart
                            }
                            @if (!isUpdated)
                            {
                                <p class="card-text text-muted small">
                                    <i>Posted on @created.ToString("MMM dd, yyyy")</i>
                                </p>
                            }
                            else
                            {
                                <p class="card-text text-muted small">
                                    <i>Posted on @updated.ToString("MMM dd, yyyy")</i>
                                    <i>(Updated)</i>
                                </p>
                            }
                           
                            <p class="card-text">@post.Content</p>
                            <form asp-action="Delete" method="post" onsubmit="return confirm('Are you sure you want to delete this post?');">
                                <input type="hidden" name="id" value="@post.Id" />
                                <button type="submit" class="btn btn-outline-secondary">Delete</button>
                            </form>

                            <form asp-controller="Post" asp-action="Edit" method="get" style="display:inline;">
                                <input type="hidden" name="id" value="@post.Id" />
                                <button type="submit"
                                        class="btn btn-outline-primary ">
                                    <i class="bi bi-journal-text me-2"></i> Edit
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <a asp-action="Create" class="btn btn-outline-secondary">Write New Post</a>
</div>